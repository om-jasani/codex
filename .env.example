# Codex - Internal Code Search System
# Example Environment Configuration
# Copy this file to .env and update with your values

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=codex_db
DATABASE_USER=postgres
DATABASE_PASSWORD=your_database_password_here

# Application Settings
APP_HOST=0.0.0.0
APP_PORT=5000
APP_ENV=production
SECRET_KEY=generate-a-random-secret-key-here
DEBUG=False

# File Storage Configuration
# Path to your company's code repository on the network
CODE_REPOSITORY_PATH=\\\\company-server\\projects
# Local storage for indexed files
FILE_STORAGE_PATH=F:\\Codex\\file_storage
# Maximum file size to index (in MB)
MAX_FILE_SIZE=50MB
# File extensions to index (comma-separated)
ALLOWED_EXTENSIONS=.c,.cpp,.h,.ino,.py,.js,.java,.cs,.php,.rb,.go,.rs,.swift,.kt,.m,.mm,.sh,.bat,.ps1,.sql,.html,.css,.scss,.xml,.json,.yaml,.yml,.txt,.md

# Search Configuration
SEARCH_RESULTS_PER_PAGE=20
MAX_SEARCH_RESULTS=100
ENABLE_FUZZY_SEARCH=True
FUZZY_THRESHOLD=0.7

# Security Settings
ENABLE_AUTHENTICATION=True
SESSION_LIFETIME=28800
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# Network Configuration
LOCAL_DOMAIN=codex.local
ENABLE_HTTPS=False
SSL_CERT_PATH=
SSL_KEY_PATH=

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=F:\\Codex\\logs\\codex.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Performance Settings
CACHE_ENABLED=True
CACHE_TTL=3600
INDEXING_BATCH_SIZE=100
CONCURRENT_INDEXING_WORKERS=4

# Default Admin Credentials (change these!)
DEFAULT_ADMIN_USER=admin
DEFAULT_ADMIN_PASSWORD=changeme123
